generator client {
  provider = "prisma-client-js" // Especifica que o cliente gerado será para JavaScript/TypeScript.
}

datasource db {
  provider = "sqlite" // Especifica que o banco de dados utilizado será SQLite.
  url      = env("DATABASE_URL") // Obtém a URL do banco de dados a partir da variável de ambiente DATABASE_URL.
}

model User {
  id String @id // Campo 'id' do tipo String, marcado como chave primária.
  name String // Campo 'name' do tipo String.
  email String @unique // Campo 'email' do tipo String, marcado como único.
  password String // Campo 'password' do tipo String.
  createdAt DateTime // Campo 'createdAt' do tipo DateTime.
}
